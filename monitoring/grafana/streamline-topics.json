{
  "annotations": { "list": [] },
  "description": "Topic-level throughput and storage monitoring for Streamline",
  "editable": true,
  "panels": [
    {
      "title": "Messages In/sec by Topic",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "rate(streamline_records_total[5m])",
          "legendFormat": "{{topic}}",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "ops" } }
    },
    {
      "title": "Bytes In/sec by Topic",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "rate(streamline_bytes_in_total[5m])",
          "legendFormat": "{{topic}}",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "Bps" } }
    },
    {
      "title": "Bytes Out/sec by Topic",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "rate(streamline_bytes_out_total[5m])",
          "legendFormat": "{{topic}}",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "Bps" } }
    },
    {
      "title": "Topic Storage Size",
      "type": "bargauge",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "targets": [
        {
          "expr": "streamline_log_size_bytes",
          "legendFormat": "{{topic}}",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "bytes" } }
    },
    {
      "title": "Partition Count by Topic",
      "type": "table",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
      "targets": [
        {
          "expr": "streamline_partitions_total",
          "format": "table",
          "instant": true,
          "refId": "A"
        }
      ]
    },
    {
      "title": "Produce Latency P99",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
      "targets": [
        {
          "expr": "histogram_quantile(0.99, rate(streamline_request_duration_seconds_bucket{api_key="0"}[5m]))",
          "legendFormat": "p99",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.50, rate(streamline_request_duration_seconds_bucket{api_key="0"}[5m]))",
          "legendFormat": "p50",
          "refId": "B"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "s" } }
    }
  ],
  "schemaVersion": 38,
  "style": "dark",
  "tags": ["streamline", "topics", "throughput"],
  "time": { "from": "now-1h", "to": "now" },
  "title": "Streamline - Topics & Throughput",
  "uid": "streamline-topics",
  "version": 1
}
