{
  "annotations": {
    "list": []
  },
  "description": "Streamline streaming platform â€” production monitoring dashboard",
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "panels": [
    {
      "title": "Overview",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "collapsed": false
    },
    {
      "title": "Messages Produced/s",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 0, "y": 1 },
      "targets": [
        {
          "expr": "sum(rate(streamline_messages_produced_total[5m]))",
          "legendFormat": "Produced/s"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "msg/s",
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 100000 },
              { "color": "red", "value": 500000 }
            ]
          }
        }
      }
    },
    {
      "title": "Messages Consumed/s",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 4, "y": 1 },
      "targets": [
        {
          "expr": "sum(rate(streamline_messages_consumed_total[5m]))",
          "legendFormat": "Consumed/s"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "msg/s" }
      }
    },
    {
      "title": "Active Connections",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 8, "y": 1 },
      "targets": [
        {
          "expr": "streamline_active_connections",
          "legendFormat": "Connections"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 8000 },
              { "color": "red", "value": 9500 }
            ]
          }
        }
      }
    },
    {
      "title": "Total Consumer Lag",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 12, "y": 1 },
      "targets": [
        {
          "expr": "sum(streamline_consumer_group_lag)",
          "legendFormat": "Total Lag"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 10000 },
              { "color": "red", "value": 100000 }
            ]
          }
        }
      }
    },
    {
      "title": "Storage Used",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 16, "y": 1 },
      "targets": [
        {
          "expr": "sum(streamline_storage_bytes)",
          "legendFormat": "Storage"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "bytes" }
      }
    },
    {
      "title": "Uptime",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 20, "y": 1 },
      "targets": [
        {
          "expr": "process_uptime_seconds{job=\"streamline\"}",
          "legendFormat": "Uptime"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "s" }
      }
    },
    {
      "title": "Throughput",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 5 },
      "collapsed": false
    },
    {
      "title": "Message Throughput",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 6 },
      "targets": [
        {
          "expr": "sum(rate(streamline_messages_produced_total[5m]))",
          "legendFormat": "Produced"
        },
        {
          "expr": "sum(rate(streamline_messages_consumed_total[5m]))",
          "legendFormat": "Consumed"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "msg/s" }
      }
    },
    {
      "title": "Byte Throughput",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 6 },
      "targets": [
        {
          "expr": "sum(rate(streamline_bytes_in_total[5m]))",
          "legendFormat": "Bytes In"
        },
        {
          "expr": "sum(rate(streamline_bytes_out_total[5m]))",
          "legendFormat": "Bytes Out"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "Bps" }
      }
    },
    {
      "title": "Latency",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 14 },
      "collapsed": false
    },
    {
      "title": "Produce Latency",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 15 },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, rate(streamline_produce_latency_seconds_bucket[5m]))",
          "legendFormat": "p50"
        },
        {
          "expr": "histogram_quantile(0.95, rate(streamline_produce_latency_seconds_bucket[5m]))",
          "legendFormat": "p95"
        },
        {
          "expr": "histogram_quantile(0.99, rate(streamline_produce_latency_seconds_bucket[5m]))",
          "legendFormat": "p99"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "s" }
      }
    },
    {
      "title": "Fetch Latency",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 15 },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, rate(streamline_fetch_latency_seconds_bucket[5m]))",
          "legendFormat": "p50"
        },
        {
          "expr": "histogram_quantile(0.95, rate(streamline_fetch_latency_seconds_bucket[5m]))",
          "legendFormat": "p95"
        },
        {
          "expr": "histogram_quantile(0.99, rate(streamline_fetch_latency_seconds_bucket[5m]))",
          "legendFormat": "p99"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "s" }
      }
    },
    {
      "title": "Consumer Groups",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 23 },
      "collapsed": false
    },
    {
      "title": "Consumer Lag by Group",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 },
      "targets": [
        {
          "expr": "sum by (group) (streamline_consumer_group_lag)",
          "legendFormat": "{{ group }}"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "short" }
      }
    },
    {
      "title": "Consumer Lag by Topic-Partition",
      "type": "table",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 24 },
      "targets": [
        {
          "expr": "streamline_consumer_group_lag > 0",
          "format": "table",
          "instant": true
        }
      ]
    },
    {
      "title": "Resources",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 32 },
      "collapsed": false
    },
    {
      "title": "Memory Usage",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 33 },
      "targets": [
        {
          "expr": "process_resident_memory_bytes{job=\"streamline\"}",
          "legendFormat": "RSS"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "bytes" }
      }
    },
    {
      "title": "CPU Usage",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 33 },
      "targets": [
        {
          "expr": "rate(process_cpu_seconds_total{job=\"streamline\"}[5m]) * 100",
          "legendFormat": "CPU %"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "percent" }
      }
    },
    {
      "title": "Open File Descriptors",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 33 },
      "targets": [
        {
          "expr": "process_open_fds{job=\"streamline\"}",
          "legendFormat": "Open FDs"
        },
        {
          "expr": "process_max_fds{job=\"streamline\"}",
          "legendFormat": "Max FDs"
        }
      ]
    }
  ],
  "schemaVersion": 39,
  "tags": ["streamline", "streaming", "kafka"],
  "templating": {
    "list": [
      {
        "name": "instance",
        "type": "query",
        "query": "label_values(streamline_messages_produced_total, instance)",
        "refresh": 2
      }
    ]
  },
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "title": "Streamline Overview",
  "uid": "streamline-overview"
}
