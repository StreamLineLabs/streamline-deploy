{
  "annotations": { "list": [] },
  "description": "Consumer group lag monitoring for Streamline",
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "links": [],
  "liveNow": false,
  "panels": [
    {
      "title": "Total Consumer Lag by Group",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "sum by (group) (streamline_consumer_group_lag)",
          "legendFormat": "{{group}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1000 },
              { "color": "red", "value": 10000 }
            ]
          }
        }
      }
    },
    {
      "title": "Consumer Lag per Partition",
      "type": "table",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "streamline_consumer_group_lag",
          "format": "table",
          "instant": true,
          "refId": "A"
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "includeByName": { "group": true, "topic": true, "partition": true, "Value": true },
            "renameByName": { "Value": "Lag" }
          }
        }
      ]
    },
    {
      "title": "Commit Rate by Group",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "rate(streamline_requests_total{api_key="8"}[5m])",
          "legendFormat": "{{group}}",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "ops" } }
    },
    {
      "title": "Rebalance Events",
      "type": "stat",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "targets": [
        {
          "expr": "increase(streamline_consumer_group_rebalances_total[1h])",
          "legendFormat": "{{group}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 5 },
              { "color": "red", "value": 10 }
            ]
          }
        }
      }
    },
    {
      "title": "Consumer Group States",
      "type": "piechart",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
      "targets": [
        {
          "expr": "count by (state) (streamline_consumer_group_state)",
          "legendFormat": "{{state}}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Fetch Latency P99",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
      "targets": [
        {
          "expr": "histogram_quantile(0.99, rate(streamline_request_duration_seconds_bucket{api_key="1"}[5m]))",
          "legendFormat": "p99",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.50, rate(streamline_request_duration_seconds_bucket{api_key="1"}[5m]))",
          "legendFormat": "p50",
          "refId": "B"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "s" } }
    }
  ],
  "schemaVersion": 38,
  "style": "dark",
  "tags": ["streamline", "consumer", "lag"],
  "templating": { "list": [] },
  "time": { "from": "now-1h", "to": "now" },
  "title": "Streamline - Consumer Lag",
  "uid": "streamline-consumer-lag",
  "version": 1
}
